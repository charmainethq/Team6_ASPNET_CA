@{
    var fullname = TempData["fullName"];
    var sessionId = TempData["sessionId"];
}

@if (sessionId != null)
{
    <li class="nav-item">
        <a class="nav-link text-dark"> Hi, @fullname! </a>
    </li>

    //TODO: Add Purchase History Action
    <li class="nav-item pl-4" style="display: inline-block;">
        <a class="nav-link text-dark" asp-controller="" asp-action="">My Purchases</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">| Log Out</a>
    </li>

}

else
{
    <li class="nav-item">
        <a class="nav-link text-dark"> Hi, Guest! </a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark"> | </a>
    </li>


    //TODO: Add login action
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Index"> Login </a>
    </li>
}


